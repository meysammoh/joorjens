echo 'deb http://www.rabbitmq.com/debian/ testing main' | sudo tee /etc/apt/sources.list.d/rabbitmq.list
wget -O- https://www.rabbitmq.com/rabbitmq-release-signing-key.asc | sudo apt-key add -
sudo apt-get update
sudo apt-get install rabbitmq-server

sudo rabbitmq-plugins enable rabbitmq_shovel rabbitmq_management

#sudo /etc/init.d/rabbitmq-server start stop ... status

#... prevent access using the default guest/guest credentials except via localhost.
sudo rabbitmqctl add_user jabeja jabeja
sudo rabbitmqctl set_user_tags jabeja administrator
sudo rabbitmqctl set_permissions -p / jabeja ".*" ".*" ".*"

