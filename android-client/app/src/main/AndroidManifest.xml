        <activity android:name=".activities.CreditActivity" />
        <activity android:name=".activities.PrivateInfoActivity" />
        <activity android:name=".activities.TurnoverActivity" />
        <activity android:name=".activities.ReturnProductActivity" />
        <activity android:name=".activities.PreSearchActivity" />
        <activity android:name=".activities.MessagesListActivity" />
        <activity android:name=".activities.DeliveryOrdersActivity" />
        <activity android:name=".activities.DeliveryViewCartDistributorActivity"></activity>
