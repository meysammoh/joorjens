<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ir.joorjens.joorapp.customViews.TitleBar2
        android:id="@+id/tb2_orders_list_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/cheap_color"
        app:title2_text="@string/label_orders_list"
        app:tile2_image="@drawable/hp_order_logo_unsel"
        android:visibility="gone">

    </ir.joorjens.joorapp.customViews.TitleBar2>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="0dp"
        android:weightSum="10">

        <ir.joorjens.joorapp.customViews.ButtonPlus
            android:textSize="20sp"
            android:id="@+id/orders_btn_tab_past"
            style="@style/ButtonWhiteStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:background="@null"
            android:text="@string/label_past_orders" />

        <ir.joorjens.joorapp.customViews.ButtonPlus
            android:textSize="20sp"
            android:id="@+id/dist_btn_tab_name"
            style="@style/ButtonWhiteStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:background="@null"
            android:text="@string/label_current_order" />
    </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="10dp"
            android:background="@drawable/unselected_tab_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="0dp"
            android:weightSum="10">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_weight="4.8"
                android:layout_height="4dp"
                android:background="@drawable/unselected_tab_bg"
                android:id="@+id/dist_ll_tab_name" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".2"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_weight="4.8"
                android:layout_height="4dp"
                android:background="@drawable/selected_tab_bg"
                android:id="@+id/dist_ll_tab_categories" />
        </LinearLayout>

    <FrameLayout
        android:id="@+id/dist_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

    </FrameLayout>
</LinearLayout>