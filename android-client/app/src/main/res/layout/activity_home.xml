<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.SwipeRefreshLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/home_refresh">

    <android.support.v4.widget.NestedScrollView
    android:id="@+id/home_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ir.joorjens.joorapp.customViews.ASLinearLayout
            android:visibility="visible"
            android:layout_width="match_parent"
            app:ll_h_percent=".28"
            android:orientation="vertical"
            app:ll_bottom_margin=".045"
            android:layout_height="40dp">

            <com.daimajia.slider.library.SliderLayout
                app:pager_animation="Foreground2Background"
                android:id="@+id/main_slider"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </ir.joorjens.joorapp.customViews.ASLinearLayout>

        <ir.joorjens.joorapp.customViews.ASLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:ll_bottom_margin=".032"
            android:orientation="horizontal"
            android:weightSum="4">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <ir.joorjens.joorapp.customViews.ImageViewPlus
                    app:iv_percent=".157"
                    app:iv_square="true"
                    android:id="@+id/hp_img_new"
                    android:layout_width="@dimen/hp_logo_size"
                    android:layout_height="@dimen/hp_logo_size"
                    android:layout_gravity="center_horizontal"
                    app:iv_image_source="@drawable/jj_ic_new"/>
                <ir.joorjens.joorapp.customViews.TextViewPlus
                    style="@style/TextStyleMost"
                    android:id="@+id/ha_tv_new"
                    android:layout_marginTop="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="@dimen/hp_logo_font_size"
                    android:text="جدیدها"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ir.joorjens.joorapp.customViews.ImageViewPlus
                    android:id="@+id/hp_img_full_sale"
                    android:layout_width="@dimen/hp_logo_size"
                    android:layout_height="@dimen/hp_logo_size"
                    android:layout_gravity="center_horizontal"
                    app:iv_image_source="@drawable/jj_ic_full_sale"
                    app:iv_percent=".157"
                    app:iv_square="true" />

                <ir.joorjens.joorapp.customViews.TextViewPlus
                    android:id="@+id/ha_tv_fullsale"
                    style="@style/TextStyleMost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="6dp"
                    android:text="پرفروش ها"
                    android:textSize="@dimen/hp_logo_font_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <ir.joorjens.joorapp.customViews.ImageViewPlus
                    app:iv_percent=".157"
                    app:iv_square="true"
                    android:id="@+id/hp_img_discount"
                    android:layout_width="@dimen/hp_logo_size"
                    android:layout_height="@dimen/hp_logo_size"
                    android:layout_gravity="center_horizontal"
                    app:iv_image_source="@drawable/jj_ic_discount"/>
                <ir.joorjens.joorapp.customViews.TextViewPlus
                    style="@style/TextStyleMost"
                    android:id="@+id/ha_tv_discount"
                    android:layout_marginTop="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="@dimen/hp_logo_font_size"
                    android:text="بسته های تخفیفی"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ir.joorjens.joorapp.customViews.ImageViewPlus
                    android:id="@+id/hp_img_cheap"
                    app:iv_percent=".157"
                    app:iv_square="true"
                    android:layout_width="@dimen/hp_logo_size"
                    android:layout_height="@dimen/hp_logo_size"
                    android:layout_gravity="center_horizontal"
                    app:iv_image_source="@drawable/jj_ic_cheap"/>
                <ir.joorjens.joorapp.customViews.TextViewPlus
                    style="@style/TextStyleMost"
                    android:id="@+id/ha_tv_cheap"
                    android:layout_marginTop="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="@dimen/hp_logo_font_size"
                    android:text="ارزان ها"/>
            </LinearLayout>

        </ir.joorjens.joorapp.customViews.ASLinearLayout>

        <ir.joorjens.joorapp.customViews.ASLinearLayout
            android:layout_width="match_parent"
            app:ll_h_percent=".126"
            android:orientation="vertical"
            app:ll_bottom_margin=".01"
            android:layout_height="wrap_content">
            <ir.joorjens.joorapp.customViews.TitleBar
                android:id="@+id/hp_discount_tb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title_text="بسته های تخفیفی"
                app:view_all_text="نمایش همه"
                app:title_text_color ="@color/discount_color"/>
        </ir.joorjens.joorapp.customViews.ASLinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/hp_rcv_discount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:scrollbars="none"
            android:nestedScrollingEnabled="false">

        </android.support.v7.widget.RecyclerView>

        <ir.joorjens.joorapp.customViews.ASLinearLayout
            android:layout_width="match_parent"
            app:ll_h_percent=".126"
            android:orientation="vertical"
            app:ll_bottom_margin=".01"
            app:ll_top_margin=".03"
            android:layout_height="wrap_content">
                <ir.joorjens.joorapp.customViews.TitleBar
                    android:id="@+id/hp_cheap_tb"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:title_text="ارزان ها"
                    app:view_all_text="نمایش همه"
                    app:title_text_color="@color/cheap_color"/>
        </ir.joorjens.joorapp.customViews.ASLinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/hp_rcv_cheap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:scrollbars="none"
            android:nestedScrollingEnabled="false">

        </android.support.v7.widget.RecyclerView>


        <ir.joorjens.joorapp.customViews.ASLinearLayout
            android:layout_width="match_parent"
            app:ll_h_percent="0"
            android:orientation="vertical"
            app:ll_bottom_margin=".03"
            app:ll_top_margin=".03"
            android:layout_height="wrap_content">
            <ir.joorjens.joorapp.customViews.ASLinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:background="@color/product_prop_bc"
                android:layout_height="20dp"
                app:ll_h_percent=".031"/>
        </ir.joorjens.joorapp.customViews.ASLinearLayout>

        <com.yarolegovich.discretescrollview.DiscreteScrollView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/dsv1"/>


        <ir.joorjens.joorapp.customViews.ASLinearLayout
            android:layout_width="match_parent"
            app:ll_h_percent=".126"
            android:orientation="vertical"
            app:ll_bottom_margin=".01"
            app:ll_top_margin=".03"
            android:layout_height="wrap_content">
        <ir.joorjens.joorapp.customViews.TitleBar
            android:id="@+id/hp_full_sale_tb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:title_text="پرفروش ها"
            app:view_all_text="نمایش همه"
            app:title_text_color="@color/full_sale_color"/>
        </ir.joorjens.joorapp.customViews.ASLinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/hp_rcv_full_sale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:scrollbars="none"
            android:nestedScrollingEnabled="false">

        </android.support.v7.widget.RecyclerView>


        <ir.joorjens.joorapp.customViews.ASLinearLayout
            android:layout_width="match_parent"
            app:ll_h_percent=".126"
            android:orientation="vertical"
            app:ll_bottom_margin=".01"
            app:ll_top_margin=".03"
            android:layout_height="wrap_content">
        <ir.joorjens.joorapp.customViews.TitleBar
            android:id="@+id/hp_new_tb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:title_text="جدید ها"
            app:view_all_text="نمایش همه"
            app:title_text_color="@color/new_color"/>
        </ir.joorjens.joorapp.customViews.ASLinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/hp_rcv_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:scrollbars="none"
            android:nestedScrollingEnabled="false">

        </android.support.v7.widget.RecyclerView>


        <ir.joorjens.joorapp.customViews.ASLinearLayout
            android:layout_width="match_parent"
            app:ll_h_percent="0"
            android:orientation="vertical"
            app:ll_bottom_margin=".03"
            app:ll_top_margin=".03"
            android:layout_height="wrap_content">
            <ir.joorjens.joorapp.customViews.ASLinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:background="@color/product_prop_bc"
                android:layout_height="20dp"
                app:ll_h_percent=".031"/>
        </ir.joorjens.joorapp.customViews.ASLinearLayout>
        <com.yarolegovich.discretescrollview.DiscreteScrollView
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/dsv2"/>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>

</android.support.v4.widget.SwipeRefreshLayout>