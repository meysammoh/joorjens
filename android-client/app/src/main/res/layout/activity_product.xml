<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="ir.joorjens.joorapp.activities.ProductActivity"
    android:id="@+id/product_main_layout"
    android:orientation="vertical">

    <ir.joorjens.joorapp.customViews.ProductView
        android:id="@+id/pv_product_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>
    <ir.joorjens.joorapp.customViews.PackageView
        android:id="@+id/pv_package_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <ir.joorjens.joorapp.customViews.ASLinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/spinner_item_back_color"
        app:ll_h_percent=".03"/>
    <ir.joorjens.joorapp.customViews.TextViewPlus
        android:id="@+id/pa_tv_similar_propacks"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        style="@style/TextStyleBold"
        android:textColor="@color/discount_color"
        android:textSize="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/similar_product"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/pa_rcv_similar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:orientation="horizontal"
        android:scrollbars="none">

    </android.support.v7.widget.RecyclerView>
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

</LinearLayout>
