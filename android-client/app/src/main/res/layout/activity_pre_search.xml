<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout
    android:id="@+id/ps_refresh"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:gravity="top"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="ir.joorjens.joorapp.activities.PreSearchActivity">

        <ir.joorjens.joorapp.customViews.ButtonPlus
            android:layout_margin="5dp"
            android:id="@+id/ps_btn_goto_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ButtonGreenBGWhiteTextStyle"
            android:text="برو به صفحه جستجو"/>

            <GridView
                android:scrollbars="none"
                android:background="@color/product_prop_bc"
                android:id="@+id/grid_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnWidth="100dp"
                android:numColumns="3"
                android:verticalSpacing="0dp"
                android:horizontalSpacing="0dp"
                android:stretchMode="spacingWidthUniform"/>

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/product_prop_bc">

            <android.support.v7.widget.RecyclerView
                android:layout_margin="10dp"
                android:background="@color/product_prop_bc"
                android:scrollbars="none"
                android:id="@+id/ps_rcv_all_products"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.SwipeRefreshLayout>