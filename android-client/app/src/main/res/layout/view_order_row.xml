<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dppr_main_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:padding="10dp"
        android:background="@color/color_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:gravity="right"
        android:id="@+id/order_row_title_section">
        <ir.joorjens.joorapp.customViews.TextViewPlus
            android:id="@+id/tv_order_row_date"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            style="@style/TextStyle"
            android:textSize="15sp"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:text="تاریخ"/>
        <ir.joorjens.joorapp.customViews.TextViewPlus
            android:id="@+id/tv_order_row_title"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            style="@style/TextStyle"
            android:textSize="15sp"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:text="شماره سفارش"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:minHeight="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/v_order_helper_strut"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true" />

        <LinearLayout
            android:layout_centerInParent="true"
            android:id="@+id/order_row_details_section"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/v_order_helper_strut"
            android:layout_alignParentRight="true"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/ll_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">
                <ir.joorjens.joorapp.customViews.TextViewPlus
                    style="@style/TextStyleRegular"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="تعداد"
                    android:id="@+id/tv_order_row_count"/>
                <ir.joorjens.joorapp.customViews.TextViewPlus
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextStyleRegular"
                    android:textSize="16sp"
                    android:text="@string/label_order_count"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_cost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">
                <ir.joorjens.joorapp.customViews.TextViewPlus
                    style="@style/TextStyleRegular"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="هزینه"
                    android:id="@+id/tv_order_row_cost"/>
                <ir.joorjens.joorapp.customViews.TextViewPlus
                    android:id="@+id/tv_order_row_cost_title"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextStyleRegular"
                    android:textSize="16sp"
                    android:text="@string/label_order_price"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_profit"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ir.joorjens.joorapp.customViews.TextViewPlus
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="سود"
                    style="@style/TextStyleRegular"
                    android:textSize="16sp"
                    android:id="@+id/tv_order_row_profit"/>
                <ir.joorjens.joorapp.customViews.TextViewPlus
                    style="@style/TextStyleRegular"
                    android:textSize="16sp"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_order_row_profit_title"
                    android:text="@string/label_profit_of_order"/>

            </LinearLayout>

        </LinearLayout>

        <ir.joorjens.joorapp.customViews.ButtonPlus
            android:layout_margin="5dp"
            android:minHeight="50dp"
            style="@style/ButtonGreenBGWhiteTextStyleNoRounded"
            android:id="@+id/btn_order_more_details"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/order_row_details_section"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_alignRight="@id/v_order_helper_strut"
            android:text="@string/label_more_details">

        </ir.joorjens.joorapp.customViews.ButtonPlus>
    </RelativeLayout>

    <ir.joorjens.joorapp.customViews.ASLinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:id="@+id/order_list_separator"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        app:ll_h_percent=".031"
        android:background="@color/product_prop_bc">
    </ir.joorjens.joorapp.customViews.ASLinearLayout>

</LinearLayout>