<?xml version="1.0" encoding="utf-8"?>

<ir.joorjens.joorapp.customViews.MyDrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="start"
    android:id="@+id/main_drawer"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:clipToPadding="false"
            app:contentInsetStart="0dp"
            app:contentInsetEnd="0dp"
            android:elevation="3dp"

            android:id="@+id/toolbar"
            android:background="@color/background">

            <LinearLayout
                android:id="@+id/ll_ba_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="7.5">

                <LinearLayout
                    android:gravity="center"
                    android:id="@+id/ll_cart"
                    android:layout_margin="6dp"
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="match_parent">
                    <ir.joorjens.joorapp.customViews.ImageViewPlus
                        android:id="@+id/img_cart"
                        android:scaleType="fitCenter"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"
                        app:iv_image_source="@drawable/cart"
                        app:iv_square="false"/>
                </LinearLayout>

                <LinearLayout
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:id="@+id/ll_scan"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <ir.joorjens.joorapp.customViews.ImageViewPlus
                        android:id="@+id/img_scan"
                        app:iv_image_source="@drawable/scan"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitCenter" />
                </LinearLayout>


                <LinearLayout
                    android:gravity="center"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="7dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:id="@+id/ll_notif"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <ir.joorjens.joorapp.customViews.ImageViewPlus
                        android:id="@+id/img_notif"
                        android:scaleType="fitCenter"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"
                        app:iv_square="true"
                        app:iv_image_source="@drawable/empty_notif" />
                </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_logo"
                android:gravity="center"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent">
                <ir.joorjens.joorapp.customViews.ImageViewPlus
                    android:scaleType="fitCenter"
                    app:iv_square="false"
                    android:background="@color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:iv_image_source="@drawable/top_logo" />
            </LinearLayout>

            <LinearLayout
                android:layout_margin="2dp"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <ir.joorjens.joorapp.customViews.ImageViewPlus
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:scaleType="fitCenter"
                    android:id="@+id/toolbar_3dot_menu"
                    android:background="@color/transparent"
                    app:iv_image_source="@drawable/top_sand_menu" />
            </LinearLayout>
            </LinearLayout>


        </android.support.v7.widget.Toolbar>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background"
                android:id="@+id/content_frame">
            </FrameLayout>

    </LinearLayout>


    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/drawer_pane"
        android:layout_gravity="end"
        android:background="@drawable/main_menu_bg">

        <!-- Profile Box -->
        <RelativeLayout
            android:id="@+id/rl_profile_box"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@color/background"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="15dp">

            <ir.joorjens.joorapp.customViews.ImageViewPlus

                android:layout_marginLeft="10dp"
                android:background="@drawable/black90_border"
                app:iv_square="true"
                android:id="@+id/img_main_menu_avatar"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp" />

            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginLeft="15dp"
                android:layout_toLeftOf="@+id/img_main_menu_avatar"
                android:orientation="vertical" >

                <ir.joorjens.joorapp.customViews.TextViewPlus
                    android:layout_alignParentTop="true"
                    style="@style/TextStyleRegular"
                    android:textSize="15sp"
                    android:id="@+id/tv_main_menu_profile_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="نام و نام خانوادگی"
                    android:layout_gravity="right" />

                <ir.joorjens.joorapp.customViews.ImageViewPlus
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:iv_square="true"
                    android:id="@+id/img_main_menu_credit"
                    app:iv_image_source="@drawable/v_credit"/>
                <ir.joorjens.joorapp.customViews.TextViewPlus
                    android:layout_marginRight="10dp"
                    android:layout_alignParentBottom="true"
                    android:layout_toLeftOf="@+id/img_main_menu_credit"
                    style="@style/TextStyleRegular"
                    android:textSize="15sp"
                    android:id="@+id/tv_main_menu_credit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="0 تومان"/>
            </RelativeLayout>
            
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_black60"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>
        </RelativeLayout>

        <!-- List of Actions (pages) -->
        <ListView
            android:scrollbars="none"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:divider="@drawable/empty_tall_divider"
            android:id="@+id/navList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rl_profile_box"
            android:choiceMode="singleChoice"
            android:background="#ffffffff" />

    </RelativeLayout>



</ir.joorjens.joorapp.customViews.MyDrawerLayout>
