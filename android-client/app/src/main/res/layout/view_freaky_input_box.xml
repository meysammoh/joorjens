<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:weightSum="7">

    <ir.joorjens.joorapp.customViews.EditTextPlus
        android:layout_marginLeft="5dp"
        android:id="@+id/fib_et_value"
        android:layout_width="0dp"
        android:textColor="@color/color_black60"
        android:layout_height="wrap_content"
        style="@style/EditTextStyle"
        android:layout_marginBottom="0dp"
        android:minHeight="10dp"
        android:background="@color/transparent"
        android:layout_weight="3"
        android:textSize="15sp"
        android:gravity="left"
        android:text="مقدار"/>
    <ir.joorjens.joorapp.customViews.TextViewPlus
        android:id="@+id/fib_tv_action"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/TextStyle"
        android:textColor="@color/full_sale_color"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="15sp"
        android:text="اکشن"/>
    <ir.joorjens.joorapp.customViews.TextViewPlus
        android:layout_marginRight="5dp"
        android:textColor="@color/color_black60"
        android:id="@+id/fib_tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/TextStyle"
        android:layout_weight="3"
        android:text="نام"/>

</LinearLayout>