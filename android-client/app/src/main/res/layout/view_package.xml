<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.SwipeRefreshLayout
    android:id="@+id/pkgv_refresh"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <android.support.v4.widget.NestedScrollView
    android:id="@+id/pkgv_main_scroll"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:background="@color/background"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/title_bar2_boarder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <ir.joorjens.joorapp.customViews.TitleBar2
            android:id="@+id/pkv_title_bar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/discount_color"
            app:title2_text="@string/action_discount_packs"
            app:tile2_image="@drawable/all_discount_logo"/>
        <LinearLayout
            android:layout_marginRight="5dp"
            android:id="@+id/vpk_package_all_properties_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right|center"
                android:layout_gravity="right"
                android:layout_weight="1">

                <ir.joorjens.joorapp.customViews.TextViewPlus
                    android:layout_marginRight="10dp"
                    android:text="نام محصول"
                    android:id="@+id/vpk_package_title"
                    style="@style/TextStyleBold"
                    android:textSize="22sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ir.joorjens.joorapp.customViews.ImageViewPlus
                    app:iv_square="true"
                    app:iv_show_discount_value="true"
                    app:iv_percent=".32"
                    app:iv_text_size="21"
                    android:id="@+id/vpk_package_img"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:scaleType="fitCenter" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:id="@+id/vpk_package_properties_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/vpk_package_title"
                    android:orientation="vertical"
                    android:divider="@drawable/empty_tall_divider"
                    android:showDividers="middle">

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_marginBottom="15dp"
            android:gravity="center_vertical"
            android:padding="15dp"
            android:id="@+id/vp_filters_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/gray_bg_with_shadow">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|right"
                android:orientation="horizontal"
                android:weightSum="4">

                <ir.joorjens.joorapp.customViews.EditTextPlus
                    android:layout_marginRight="10dp"
                    android:id="@+id/vpk_order_number"
                    android:layout_marginBottom="0dp"
                    style="@style/EditTextStyle"
                    android:layout_width="90dp"
                    android:layout_height="35dp"
                    android:layout_gravity="right"
                    android:gravity="center"
                    android:layout_toLeftOf="@+id/label_count"
                    android:hint="وارد کنید"
                    android:inputType="number" />

                <ir.joorjens.joorapp.customViews.TextViewPlus
                    android:id="@+id/label_count"
                    style="@style/TextStyleRegular"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="تعداد:"
                    android:textColor="#F00" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/vpk_btn_add_card"
            android:text=""
            android:gravity="center"
            android:background="@drawable/rounded_discount_color"
            android:weightSum="7">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="3.4">

                <ir.joorjens.joorapp.customViews.TextViewPlus
                    android:id="@+id/vpk_btn_price_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextStyle"
                    android:textColor="#FFF"
                    android:layout_marginBottom="0dp"
                    android:text="تعداد را وارد کنید"/>

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:background="#FFF"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="3.4">

                <ir.joorjens.joorapp.customViews.TextViewPlus
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextStyle"
                    android:textColor="#FFF"
                    android:layout_marginBottom="0dp"
                    android:text="انتخاب"/>
                <android.support.v7.widget.AppCompatImageView
                    android:layout_marginLeft="4dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/v_add_to_card"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <ir.joorjens.joorapp.customViews.ButtonPlus
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:id="@+id/pkgv_first_page"
                style="@style/ButtonWhiteGBGrayBorderStyle"
                android:text="@string/label_return_first_page"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <ir.joorjens.joorapp.customViews.ButtonPlus
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:id="@+id/pkgv_prev_page"
                style="@style/ButtonWhiteGBGrayBorderStyle"
                android:text="@string/label_return_previous_page"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <ir.joorjens.joorapp.customViews.ASLinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/spinner_item_back_color"
            app:ll_h_percent=".03"/>


        <ir.joorjens.joorapp.customViews.TextViewPlus
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            style="@style/TextStyleBold"
            android:textColor="@color/discount_color"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/similar_packages"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/pkgv_rcv_similar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:scrollbars="none">

        </android.support.v7.widget.RecyclerView>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>

</android.support.v4.widget.SwipeRefreshLayout>