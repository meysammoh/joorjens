<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="0dp"
        android:weightSum="10">

        <ir.joorjens.joorapp.customViews.ButtonPlus
            android:textSize="20sp"
            android:id="@+id/del_order_map_tab"
            style="@style/ButtonWhiteStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:background="@null"
            android:text="@string/label_map_orders" />

        <ir.joorjens.joorapp.customViews.ButtonPlus
            android:textSize="20sp"
            android:id="@+id/del_order_list_tab"
            style="@style/ButtonWhiteStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:background="@null"
            android:text="@string/label_list_orders" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="10dp"
        android:background="@drawable/unselected_tab_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="0dp"
        android:weightSum="10">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight="4.8"
            android:layout_height="4dp"
            android:background="@drawable/unselected_tab_bg"
            android:id="@+id/del_ll_map_tab" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".2"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight="4.8"
            android:layout_height="4dp"
            android:background="@drawable/selected_tab_bg"
            android:id="@+id/del_ll_list_tab" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/del_orders_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

    </FrameLayout>
</LinearLayout>